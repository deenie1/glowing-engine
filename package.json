{
	"name": "web3.js",
	"private": true,
	"version": "4.0.0",
	"description": "Ethereum API wrappers and utilities",
	"author": "ChainSafe Systems",
	"license": "LGPL-3.0",
	"keywords": [
		"ethereum",
		"eth",
		"web3",
		"web3js",
		"web3.js",
		"blockchain"
	],
	"homepage": "https://github.com/ChainSafe/web3.js#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ChainSafe/web3.js.git"
	},
	"bugs": {
		"url": "https://github.com/ChainSafe/web3.js/issues"
	},
	"engines": {
		"node": ">=12",
		"npm": ">=6.12.0"
	},
	"workspaces": {
		"packages": [
			"packages/*",
			"tools/*"
		]
	},
	"scripts": {
		"build": "yarn clean && lerna run build --stream",
		"clean": "lerna run clean",
		"ganache": "npx ganache -m 'smart guide what forget tired jungle always expire rescue boring glue champion' --account=\"0x4c3758228f536f7a210f8936182fb5b728046970b8e3215d0b5cb4c4faae8a4e,100000000000000000000\" --account=\"0x34aeb1f338c17e6b440c189655c89fcef148893a24a7f15c0cb666d9cf5eacb3,100000000000000000000\"",
		"ganache-background": "yarn ganache > /dev/null & client=$! npx wait-port 8545",
		"geth": "docker run -p 8545:8545 ethereum/client-go --nodiscover --nousb --ws --ws.addr 0.0.0.0 --ws.port 8545 --http --http.addr 0.0.0.0 --http.port 8545 --allow-insecure-unlock --http.api personal,web3,eth,admin,debug,txpool,net --ws.api personal,web3,eth,admin,debug,miner,txpool,net --dev",
		"geth-background": "docker run -d -p 8545:8545 ethereum/client-go --nodiscover --nousb --ws --ws.addr 0.0.0.0 --ws.port 8545 --http --http.addr 0.0.0.0 --http.port 8545 --allow-insecure-unlock --http.api personal,web3,eth,admin,debug,txpool,net --ws.api personal,web3,eth,admin,debug,miner,txpool,net --dev",
		"lint": "lerna run lint --stream --parallel",
		"lint:fix": "lerna run lint:fix --stream --parallel",
		"format": "lerna run format --stream --parallel",
		"test": "lerna run test --stream --parallel",
		"test:unit": "lerna run test:unit --stream --parallel",
		"test:integration": "lerna run test:integration --stream --parallel",
		"test:integration:browsers": "./node_modules/.bin/karma start karma.config.js",
		"prepare": "husky install",
		"postinstall": "yarn build"
	},
	"devDependencies": {
		"@types/node": "*",
		"assert": "^2.0.0",
		"browserify": "^17.0.0",
		"buffer": "^6.0.3",
		"bufferutil": "^4.0.6",
		"crypto-browserify": "^3.12.0",
		"eslint": "^8.3.0",
		"eslint-plugin-header": "^3.1.1",
		"https-browserify": "^1.0.0",
		"husky": "^7.0.4",
		"jasmine": "^4.0.2",
		"jest": "^27.3.1",
		"karma": "^6.3.17",
		"karma-browserify": "^8.1.0",
		"karma-chrome-launcher": "^3.1.1",
		"karma-firefox-launcher": "^2.1.2",
		"karma-jasmine": "^4.0.1",
		"karma-webpack": "^5.0.0",
		"lerna": "^4.0.0",
		"lint-staged": "12.1.2",
		"prettier": "^2.4.1",
		"ts-jest": "^27.0.7",
		"ts-loader": "^9.2.8",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.2",
		"utf-8-validate": "^5.0.9",
		"watchify": "^4.0.0",
		"webpack": "^5.70.0"
	},
	"packageManager": "yarn@1.22.15"
}
