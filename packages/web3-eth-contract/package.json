{
	"name": "web3-eth-contract",
	"version": "4.0.1-alpha.1",
	"description": "Web3 module to interact with Ethereum smart contracts.",
	"main": "dist/index.js",
	"repository": "https://github.com/ethereum/web3.js/tree/4.x/packages/web3-eth-contract",
	"author": "ChainSafe Systems",
	"license": "LGPL-3.0",
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"clean": "run -T rimraf dist",
		"build": "yarn run clean && run -T tsc --build",
		"build:check": "node -e \"require('./dist')\"",
		"lint": "run -T eslint --ext .js,.ts .",
		"lint:fix": "run -T eslint --fix --ext .js,.ts .",
		"format": "run -T prettier --write '**/*'",
		"test": "run -T jest --config=./test/unit/jest.config.js",
		"test:coverage": "run -T jest --config=./test/unit/jest.config.js --coverage=true --coverage-reporters=text",
		"test:ci": "run -T jest --coverage=true --coverage-reporters=json --verbose",
		"test:watch": "yarn test -- --watch",
		"test:unit": "run -T jest --config=./test/unit/jest.config.js",
		"test:integration": "run -T jest --config=./test/integration/jest.config.js --runInBand --forceExit",
		"test:e2e:electron": "yarn dlx cypress run --headless --browser electron --env grep='ignore',invert=true",
		"test:e2e:chrome": "yarn dlx cypress run --headless --browser chrome --env grep='ignore',invert=true",
		"test:e2e:firefox": "yarn dlx cypress run --headless --browser firefox --env grep='ignore',invert=true"
	},
	"dependencies": {
		"web3-core": "workspace:^",
		"web3-errors": "workspace:^",
		"web3-eth": "workspace:^",
		"web3-eth-abi": "workspace:^",
		"web3-types": "workspace:^",
		"web3-utils": "workspace:^",
		"web3-validator": "workspace:^"
	},
	"devDependencies": {
		"@humeris/espresso-shot": "^4.0.0",
		"jest-extended": "^3.0.1",
		"web3-eth-accounts": "workspace:^"
	}
}
